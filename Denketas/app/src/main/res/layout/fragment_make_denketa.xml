            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"


                android:gravity="start"

                android:paddingStart="14dp"
                android:text="Title*"
                android:textColor="@color/thm_blue_red"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:sl_cornerRadius="24dp"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="@color/thm_shadow"
                app:sl_shadowRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_medium"

                    android:background="@drawable/shp_rect_rounded_white_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:gravity="start|center_vertical"
                        android:hint="Type here..."
                        android:paddingStart="14dp" />



                </RelativeLayout>
            </com.dd.ShadowLayout>

        </LinearLayout>


