<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/act_intro_lay_toolbar_rlBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:orientation="vertical"
        android:weightSum="100">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="79"
            android:paddingTop="20dp"
            android:src="@drawable/ic_card" />


        <LinearLayout
            android:id="@+id/frg_denketa_question_llSeeAnswer"

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="7"
            android:background="@drawable/shp_rect_rounded_app_blue"
            android:gravity="center"

            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="horizontal"
>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:fontFamily="@font/poppins_bold"
                android:lines="1"

                android:text="See the answer"

                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_medium"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frg_denketa_question_llBuyNow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="7"
            android:background="@drawable/shp_rect_rounded_app_blue"
            android:gravity="center"


            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:fontFamily="@font/poppins_bold"
                android:lines="1"

                android:text="Buy now (0,99â‚¬)"

                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_medium"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frg_denketa_question_llBundleDiscount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="7"
            android:background="@drawable/shp_rect_rounded_app_blue"
            android:gravity="center"

            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:fontFamily="@font/poppins_bold"
                android:lines="1"

                android:text="Bundle discount"

                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_medium"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>