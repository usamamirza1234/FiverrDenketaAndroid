<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_dictionary_ll_parrent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large">

        <TextView
            android:id="@+id/lay_dictionary_txv_word"
            android:layout_width="wrap_content" android:gravity="center"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Example question 1"
            android:textColor="@color/thm_blue_app"
            android:textSize="@dimen/fontsize_large"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/lay_dictionary_ll_extended"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_plus" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_dictionary_rlBottom"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Detail of FAQ"
            android:textColor="@color/thm_blue_app"
            android:textSize="@dimen/fontsize_small" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/thm_blue_app" />
</LinearLayout>